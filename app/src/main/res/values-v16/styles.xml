<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="ConfirmationTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="ConfirmationTextAppearance.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ConfirmationTextAppearance.SubTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ConfirmationTextAppearance.Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Widget.DateTime">
        <item name="android:minWidth">75dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_square_date</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/csl_date</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>
</resources>